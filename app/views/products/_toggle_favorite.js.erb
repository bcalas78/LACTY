var productId = '<%= @product.id%>'

function toggleLikeButton(productId, favoritedProduct) {
  let likeButton = document.querySelector(`.like-icon[data-id='${productId}']`)
  likeButton.classList.toggle('red');
  if (likeButton.classList.contains('red')) {
    const favoriteList = document.querySelector('.favorites');
    favoriteList.insertAdjacentHTML('beforeend', favoritedProduct)
  }
  else {
    document.querySelector(`.favorite[data-id='${productId}']`).remove()
  }
}

toggleLikeButton(productId, '<%= j render "products/product", product: @product %>');
