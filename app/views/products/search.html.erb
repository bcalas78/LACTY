
<div class="form-login text-center">
  <h1 class="mt-3 mb-4">Page Recherche</h1>

  <%= form_tag products_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control mb-4",
      placeholder: "Tapez le nom d'un produit"
    %>
    <%= submit_tag "Recherche", class: "btn btn-search mb-3" %>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-5">
  <a href="/scanner" class="btn btn-scan" role="button" aria-pressed="true"><i class="fa-solid fa-barcode"></i> Scan</a>
</div>
